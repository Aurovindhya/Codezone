import java.util.*;
public class Hello {

    public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		String str1=sc.nextLine();
		String str2=sc.nextLine();
		int n1=str1.length();
		int n2=str2.length();
		if((str1.charAt(0)==str2.charAt(0))&&(str1.charAt(n1-1)==str2.charAt(n2-1)))
		System.out.print("YES");
		else
		System.out.print("NO");

	}
}
